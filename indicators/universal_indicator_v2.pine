volumeWeight = input.int(2, "Volume Weight / –í–µ—Å –æ–±—ä—ë–º–∞", minval=0, maxval=5, group="‚öñÔ∏è Indicator Weights / –í–µ—Å–∞ –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä–æ–≤")
priceActionWeight = input.int(1, "Price Action Weight / –í–µ—Å Price Action", minval=0, maxval=5, group="‚öñÔ∏è Indicator Weights / –í–µ—Å–∞ –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä–æ–≤")
maWeight = input.int(1, "Moving Average Weight / –í–µ—Å MA", minval=0, maxval=5, group="‚öñÔ∏è Indicator Weights / –í–µ—Å–∞ –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä–æ–≤")

// Fibonacci Settings / –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –§–∏–±–æ–Ω–∞—á—á–∏
fibLookback = input.int(100, "Fibonacci Lookback / –ü–µ—Ä–∏–æ–¥ –ø–æ–∏—Å–∫–∞ –§–∏–±–æ–Ω–∞—á—á–∏", minval=10, group="Fibonacci Settings / –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –§–∏–±–æ–Ω–∞—á—á–∏")
showFibOnChart = input.bool(true, "Show Fib on Chart / –ü–æ–∫–∞–∑–∞—Ç—å –§–∏–±–æ–Ω–∞—á—á–∏ –Ω–∞ –≥—Ä–∞—Ñ–∏–∫–µ", group="Fibonacci Settings / –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –§–∏–±–æ–Ω–∞—á—á–∏")
showFibLabels = input.bool(true, "Show Fib Labels / –ü–æ–∫–∞–∑–∞—Ç—å –º–µ—Ç–∫–∏ –§–∏–±–æ–Ω–∞—á—á–∏", group="Fibonacci Settings / –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –§–∏–±–æ–Ω–∞—á—á–∏")
fibLineExtend = input.int(50, "Fib Line Extension / –ü—Ä–æ–¥–ª–µ–Ω–∏–µ –ª–∏–Ω–∏–π –§–∏–±–æ–Ω–∞—á—á–∏", minval=10, group="Fibonacci Settings / –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –§–∏–±–æ–Ω–∞—á—á–∏")

// Display Settings / –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è
showBullishSignals = input.bool(true, "Show Bullish Signals / –ü–æ–∫–∞–∑–∞—Ç—å –±—ã—á—å–∏ —Å–∏–≥–Ω–∞–ª—ã", group="Display Settings / –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è")
showBearishSignals = input.bool(true, "Show Bearish Signals / –ü–æ–∫–∞–∑–∞—Ç—å –º–µ–¥–≤–µ–∂—å–∏ —Å–∏–≥–Ω–∞–ª—ã", group="Display Settings / –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è")
showZones = input.bool(true, "Show Colored Zones / –ü–æ–∫–∞–∑–∞—Ç—å —Ü–≤–µ—Ç–Ω—ã–µ –∑–æ–Ω—ã", group="Display Settings / –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è")
showDebugTable = input.bool(true, "Show Debug Table / –ü–æ–∫–∞–∑–∞—Ç—å —Ç–∞–±–ª–∏—Ü—É –æ—Ç–ª–∞–¥–∫–∏", group="Display Settings / –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è")

// ============================================================================
// –í–´–ß–ò–°–õ–ï–ù–ò–ï –ò–ù–î–ò–ö–ê–¢–û–†–û–í / INDICATOR CALCULATIONS
// ============================================================================

// RSI Calculation / –í—ã—á–∏—Å–ª–µ–Ω–∏–µ RSI
rsi = ta.rsi(close, rsiLength)
rsiSmooth = ta.sma(rsi, rsiSmoothLength)

// Volume Momentum / –û–±—ä–µ–º–Ω—ã–π –º–æ–º–µ–Ω—Ç—É–º
// –ù–æ—Ä–º–∞–ª–∏–∑–æ–≤–∞–Ω–Ω—ã–π –æ–±—ä–µ–º –æ—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω–æ –µ–≥–æ —Å–∫–æ–ª—å–∑—è—â–µ–π —Å—Ä–µ–¥–Ω–µ–π
volumeMa = ta.sma(volume, volumeMaLength)
volumeMomentum = volume / volumeMa

// Issue #67: Adaptive Threshold using Standard Deviation
// –ê–¥–∞–ø—Ç–∏–≤–Ω—ã–π –ø–æ—Ä–æ–≥ —Å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ–º —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω–æ–≥–æ –æ—Ç–∫–ª–æ–Ω–µ–Ω–∏—è
volumeStdDev = ta.stdev(volume, volumeMaLength)
adaptiveThreshold = volumeMa + (volumeStdDev * adaptiveMultiplier)
adaptiveVolumeStrong = volume > adaptiveThreshold

// Issue #67: Directional Volume Analysis
// –ê–Ω–∞–ª–∏–∑ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–Ω–æ–≥–æ –æ–±—ä—ë–º–∞ (–ø–æ–∫—É–ø–∞—Ç–µ–ª—å—Å–∫–∏–π vs –ø—Ä–æ–¥–∞–≤–∞—Ç–µ–ª—å—Å–∫–∏–π)
buyingVolume = close > open ? volume : 0.0
sellingVolume = close < open ? volume : 0.0
netVolume = buyingVolume - sellingVolume
isBuyingPressure = netVolume > 0
isSellingPressure = netVolume < 0

// Issue #67: Improved Momentum Formula with Price Change
// –£–ª—É—á—à–µ–Ω–Ω–∞—è —Ñ–æ—Ä–º—É–ª–∞ –º–æ–º–µ–Ω—Ç—É–º–∞ —Å —É—á—ë—Ç–æ–º –∏–∑–º–µ–Ω–µ–Ω–∏—è —Ü–µ–Ω—ã
priceChange = close != 0 ? math.abs(close - open) / close : 0.0
improvedMomentum = volumeMomentum * (1 + priceChange * 100)  // Scale price change for better weighting

// Issue #67: Volume Cluster Detection
// –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ –∫–ª–∞—Å—Ç–µ—Ä–æ–≤ –æ–±—ä—ë–º–∞ (–Ω–µ—Å–∫–æ–ª—å–∫–æ –±–∞—Ä–æ–≤ –ø–æ–¥—Ä—è–¥ —Å –≤—ã—Å–æ–∫–∏–º –æ–±—ä—ë–º–æ–º)
volumeCluster = false
if detectVolumeClusters
    clusterCount = 0
    for i = 0 to minConsecutiveBars - 1
        threshold = useAdaptiveThreshold ? adaptiveThreshold[i] : volumeMa[i] * momentumThreshold
        if volume[i] > threshold
            clusterCount += 1
    volumeCluster := clusterCount >= minConsecutiveBars

// State Detection / –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ —Å–æ—Å—Ç–æ—è–Ω–∏—è
isOversold = rsi < rsiOversold
isOverbought = rsi > rsiOverbought
isNeutral = not isOversold and not isOverbought

// Momentum Confirmation / –ü–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ –º–æ–º–µ–Ω—Ç—É–º–∞
// Choose between fixed threshold, adaptive threshold, or improved momentum
strongMomentumBasic = volumeMomentum > momentumThreshold
strongMomentumAdaptive = adaptiveVolumeStrong
strongMomentumImproved = improvedMomentum > (momentumThreshold * 1.5)  // Higher threshold for improved formula

// Final momentum determination based on settings
strongMomentum = false
if useImprovedMomentum
    strongMomentum := strongMomentumImproved
else if useAdaptiveThreshold
    strongMomentum := strongMomentumAdaptive
else
    strongMomentum := strongMomentumBasic

// Add volume cluster confirmation if enabled
if detectVolumeClusters and volumeCluster
    strongMomentum := true

// ============================================================================
// Issue #68: RSI DIVERGENCE DETECTION / –û–ü–†–ï–î–ï–õ–ï–ù–ò–ï –î–ò–í–ï–†–ì–ï–ù–¶–ò–ô RSI
// ============================================================================

// Find pivot points for price
// –ü–æ–∏—Å–∫ –ª–æ–∫–∞–ª—å–Ω—ã—Ö —ç–∫—Å—Ç—Ä–µ–º—É–º–æ–≤ –¥–ª—è —Ü–µ–Ω—ã
pivotLow = ta.pivotlow(low, divergenceLookback, divergenceLookback)
pivotHigh = ta.pivothigh(high, divergenceLookback, divergenceLookback)

// Find pivot points for RSI
// –ü–æ–∏—Å–∫ –ª–æ–∫–∞–ª—å–Ω—ã—Ö —ç–∫—Å—Ç—Ä–µ–º—É–º–æ–≤ –¥–ª—è RSI
rsiPivotLow = ta.pivotlow(rsi, divergenceLookback, divergenceLookback)
rsiPivotHigh = ta.pivothigh(rsi, divergenceLookback, divergenceLookback)

// Store previous pivot values
// –•—Ä–∞–Ω–µ–Ω–∏–µ –ø—Ä–µ–¥—ã–¥—É—â–∏—Ö –∑–Ω–∞—á–µ–Ω–∏–π —ç–∫—Å—Ç—Ä–µ–º—É–º–æ–≤
var float prevPriceLow = na
var float prevPriceHigh = na
var float prevRsiLow = na
var float prevRsiHigh = na

// Update previous pivots when new pivot is found
// –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø—Ä–µ–¥—ã–¥—É—â–∏—Ö —ç–∫—Å—Ç—Ä–µ–º—É–º–æ–≤ –ø—Ä–∏ –æ–±–Ω–∞—Ä—É–∂–µ–Ω–∏–∏ –Ω–æ–≤—ã—Ö
if not na(pivotLow)
    prevPriceLow := pivotLow

if not na(pivotHigh)
    prevPriceHigh := pivotHigh

if not na(rsiPivotLow)
    prevRsiLow := rsiPivotLow

if not na(rsiPivotHigh)
    prevRsiHigh := rsiPivotHigh

// Detect bullish divergence
// –û–±–Ω–∞—Ä—É–∂–µ–Ω–∏–µ –±—ã—á—å–µ–π –¥–∏–≤–µ—Ä–≥–µ–Ω—Ü–∏–∏
// Price makes lower low, RSI makes higher low
// –¶–µ–Ω–∞ —Ñ–æ—Ä–º–∏—Ä—É–µ—Ç –±–æ–ª–µ–µ –Ω–∏–∑–∫–∏–π –º–∏–Ω–∏–º—É–º, RSI —Ñ–æ—Ä–º–∏—Ä—É–µ—Ç –±–æ–ª–µ–µ –≤—ã—Å–æ–∫–∏–π –º–∏–Ω–∏–º—É–º
bullishDivergence = false
bullishDivergenceStrength = 0.0

if enableDivergenceDetection and not na(pivotLow) and not na(prevPriceLow) and not na(rsiPivotLow) and not na(prevRsiLow)
    // Check if price made a lower low
    priceLowerLow = pivotLow < prevPriceLow
    // Check if RSI made a higher low
    rsiHigherLow = rsiPivotLow > prevRsiLow
    // Check if RSI is in oversold zone
    inOversoldZone = rsiPivotLow < rsiOversold

    if priceLowerLow and rsiHigherLow and inOversoldZone
        bullishDivergence := true
        // Calculate divergence strength
        // –í—ã—á–∏—Å–ª–µ–Ω–∏–µ —Å–∏–ª—ã –¥–∏–≤–µ—Ä–≥–µ–Ω—Ü–∏–∏
        bullishDivergenceStrength := prevRsiLow != 0 ? (rsiPivotLow - prevRsiLow) / prevRsiLow : 0.0

// Detect bearish divergence
// –û–±–Ω–∞—Ä—É–∂–µ–Ω–∏–µ –º–µ–¥–≤–µ–∂—å–µ–π –¥–∏–≤–µ—Ä–≥–µ–Ω—Ü–∏–∏
// Price makes higher high, RSI makes lower high
// –¶–µ–Ω–∞ —Ñ–æ—Ä–º–∏—Ä—É–µ—Ç –±–æ–ª–µ–µ –≤—ã—Å–æ–∫–∏–π –º–∞–∫—Å–∏–º—É–º, RSI —Ñ–æ—Ä–º–∏—Ä—É–µ—Ç –±–æ–ª–µ–µ –Ω–∏–∑–∫–∏–π –º–∞–∫—Å–∏–º—É–º
bearishDivergence = false
bearishDivergenceStrength = 0.0

if enableDivergenceDetection and not na(pivotHigh) and not na(prevPriceHigh) and not na(rsiPivotHigh) and not na(prevRsiHigh)
    // Check if price made a higher high
