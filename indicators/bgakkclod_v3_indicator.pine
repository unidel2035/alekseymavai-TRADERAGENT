// –¢–ê–ë–õ–ò–¶–ê –ò–ù–§–û–†–ú–ê–¶–ò–ò –ù–ê –ì–†–ê–§–ò–ö–ï / INFO TABLE ON CHART
// ============================================================================
// –°–æ–≥–ª–∞—Å–Ω–æ issue #59: —Ç–∞–±–ª–∏—Ü–∞ —Å –¥–∞–Ω–Ω—ã–º–∏ –æ—Ç–æ–±—Ä–∞–∂–∞–µ—Ç—Å—è –Ω–∞ –≥—Ä–∞—Ñ–∏–∫–µ –≤–≤–µ—Ä—Ö—É —Å–ø—Ä–∞–≤–∞
// According to issue #59: data table is displayed on chart at top-right

if showInfoTable
    var table infoTable = table.new(position.top_right, 2, 13,
                                     border_width=1,
                                     border_color=color.gray,
                                     frame_width=1,
                                     frame_color=color.gray)

    if barstate.islast
        // Header / –ó–∞–≥–æ–ª–æ–≤–æ–∫
        table.cell(infoTable, 0, 0, "Metric", bgcolor=color.new(color.blue, 70), text_color=color.white, text_size=size.small)
        table.cell(infoTable, 1, 0, "Value", bgcolor=color.new(color.blue, 70), text_color=color.white, text_size=size.small)

        // RSI
        rsiColor = isOversold ? color.new(color.green, 80) : (isOverbought ? color.new(color.red, 80) : color.new(color.gray, 80))
        table.cell(infoTable, 0, 1, "RSI", bgcolor=color.new(color.gray, 90), text_size=size.small)
        table.cell(infoTable, 1, 1, str.tostring(rsi, "#.##"), bgcolor=rsiColor, text_size=size.small)

        // RSI State
        rsiState = isOversold ? "Oversold" : (isOverbought ? "Overbought" : "Neutral")
        table.cell(infoTable, 0, 2, "State", bgcolor=color.new(color.gray, 90), text_size=size.small)
        table.cell(infoTable, 1, 2, rsiState, bgcolor=rsiColor, text_size=size.small)

        // Volume Momentum
        volumeColorTable = strongMomentum ? color.new(color.green, 80) : color.new(color.gray, 80)
        table.cell(infoTable, 0, 3, "Vol Momentum", bgcolor=color.new(color.gray, 90), text_size=size.small)
        table.cell(infoTable, 1, 3, str.tostring(volumeMomentum, "#.##"), bgcolor=volumeColorTable, text_size=size.small)

        // RSI Direction
        rsiDirection = rsiRising ? "Rising ‚Üë" : (rsiFalling ? "Falling ‚Üì" : "Flat ‚Üí")
        dirColor = rsiRising ? color.new(color.green, 80) : (rsiFalling ? color.new(color.red, 80) : color.new(color.gray, 80))
        table.cell(infoTable, 0, 4, "RSI Direction", bgcolor=color.new(color.gray, 90), text_size=size.small)
        table.cell(infoTable, 1, 4, rsiDirection, bgcolor=dirColor, text_size=size.small)

        // Last Bullish Signal
        bullishBarsAgo = not na(lastBullishBarForTable) ? bar_index - lastBullishBarForTable : -1
        bullishText = bullishBarsAgo >= 0 ? str.tostring(bullishBarsAgo) + " bars ago" : "None"
        table.cell(infoTable, 0, 5, "Last Bullish", bgcolor=color.new(color.gray, 90), text_size=size.small)
        table.cell(infoTable, 1, 5, bullishText, bgcolor=color.new(color.green, 90), text_size=size.small)

        // Last Bearish Signal
        bearishBarsAgo = not na(lastBearishBarForTable) ? bar_index - lastBearishBarForTable : -1
        bearishText = bearishBarsAgo >= 0 ? str.tostring(bearishBarsAgo) + " bars ago" : "None"
        table.cell(infoTable, 0, 6, "Last Bearish", bgcolor=color.new(color.gray, 90), text_size=size.small)
        table.cell(infoTable, 1, 6, bearishText, bgcolor=color.new(color.red, 90), text_size=size.small)

        // Signal Filter Status
        signalAllowed_current = na(lastSignalBar) or (bar_index - lastSignalBar) >= minBarsBetweenSignals
        filterStatus = signalAllowed_current ? "Allowed" : "Blocked"
        filterColor = signalAllowed_current ? color.new(color.green, 80) : color.new(color.red, 80)
        table.cell(infoTable, 0, 7, "Signal Filter", bgcolor=color.new(color.gray, 90), text_size=size.small)
        table.cell(infoTable, 1, 7, filterStatus, bgcolor=filterColor, text_size=size.small)

        // Issue #67: Adaptive Threshold
        adaptiveThresholdText = str.tostring(adaptiveThreshold, "#.##")
        table.cell(infoTable, 0, 8, "Adaptive Threshold", bgcolor=color.new(color.gray, 90), text_size=size.small)
        table.cell(infoTable, 1, 8, adaptiveThresholdText, bgcolor=color.new(color.blue, 90), text_size=size.small)

        // Issue #67: Improved Momentum
        improvedMomentumText = str.tostring(improvedMomentum, "#.##")
        improvedMomentumColor = improvedMomentum > (momentumThreshold * 1.5) ? color.new(color.green, 80) : color.new(color.gray, 80)
        table.cell(infoTable, 0, 9, "Improved Momentum", bgcolor=color.new(color.gray, 90), text_size=size.small)
        table.cell(infoTable, 1, 9, improvedMomentumText, bgcolor=improvedMomentumColor, text_size=size.small)

        // Issue #67: Volume Cluster Status
        clusterStatus = volumeCluster ? "Active" : "None"
        clusterColor = volumeCluster ? color.new(color.green, 80) : color.new(color.gray, 80)
        table.cell(infoTable, 0, 10, "Volume Cluster", bgcolor=color.new(color.gray, 90), text_size=size.small)
        table.cell(infoTable, 1, 10, clusterStatus, bgcolor=clusterColor, text_size=size.small)

        // Issue #68: Bullish Divergence Status
        bullishDivStatus = strongBullishDivergence ? "Detected" : "None"
        bullishDivColor = strongBullishDivergence ? color.new(color.green, 80) : color.new(color.gray, 80)
        table.cell(infoTable, 0, 11, "Bullish Divergence", bgcolor=color.new(color.gray, 90), text_size=size.small)
        table.cell(infoTable, 1, 11, bullishDivStatus, bgcolor=bullishDivColor, text_size=size.small)

        // Issue #68: Bearish Divergence Status
        bearishDivStatus = strongBearishDivergence ? "Detected" : "None"
        bearishDivColor = strongBearishDivergence ? color.new(color.red, 80) : color.new(color.gray, 80)
        table.cell(infoTable, 0, 12, "Bearish Divergence", bgcolor=color.new(color.gray, 90), text_size=size.small)
        table.cell(infoTable, 1, 12, bearishDivStatus, bgcolor=bearishDivColor, text_size=size.small)

