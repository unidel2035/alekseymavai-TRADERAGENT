               bgcolor=rsiBearishSignal ? color.new(color.red, 70) : color.new(color.gray, 90), text_size=size.small)

    // MACD
    table.cell(confluenceTable, 0, 2, "MACD", text_size=size.small)
    table.cell(confluenceTable, 1, 2, macdBullish ? "‚úì" : "‚àí",
               bgcolor=macdBullish ? color.new(color.green, 70) : color.new(color.gray, 90), text_size=size.small)
    table.cell(confluenceTable, 2, 2, macdBearish ? "‚úì" : "‚àí",
               bgcolor=macdBearish ? color.new(color.red, 70) : color.new(color.gray, 90), text_size=size.small)

    // Stochastic
    table.cell(confluenceTable, 0, 3, "Stochastic", text_size=size.small)
    table.cell(confluenceTable, 1, 3, stochBullish ? "‚úì" : "‚àí",
               bgcolor=stochBullish ? color.new(color.green, 70) : color.new(color.gray, 90), text_size=size.small)
    table.cell(confluenceTable, 2, 3, stochBearish ? "‚úì" : "‚àí",
               bgcolor=stochBearish ? color.new(color.red, 70) : color.new(color.gray, 90), text_size=size.small)

    // Volume
    table.cell(confluenceTable, 0, 4, "Volume", text_size=size.small)
    table.cell(confluenceTable, 1, 4, volumeBullish ? "‚úì" : "‚àí",
               bgcolor=volumeBullish ? color.new(color.green, 70) : color.new(color.gray, 90), text_size=size.small)
    table.cell(confluenceTable, 2, 4, volumeBearish ? "‚úì" : "‚àí",
               bgcolor=volumeBearish ? color.new(color.red, 70) : color.new(color.gray, 90), text_size=size.small)

    // Price Action
    table.cell(confluenceTable, 0, 5, "Price Action", text_size=size.small)
    table.cell(confluenceTable, 1, 5, bullishCandle ? "‚úì" : "‚àí",
               bgcolor=bullishCandle ? color.new(color.green, 70) : color.new(color.gray, 90), text_size=size.small)
    table.cell(confluenceTable, 2, 5, bearishCandle ? "‚úì" : "‚àí",
               bgcolor=bearishCandle ? color.new(color.red, 70) : color.new(color.gray, 90), text_size=size.small)

    // Moving Averages
    table.cell(confluenceTable, 0, 6, "MA Cross", text_size=size.small)
    table.cell(confluenceTable, 1, 6, maBullish ? "‚úì" : "‚àí",
               bgcolor=maBullish ? color.new(color.green, 70) : color.new(color.gray, 90), text_size=size.small)
    table.cell(confluenceTable, 2, 6, maBearish ? "‚úì" : "‚àí",
               bgcolor=maBearish ? color.new(color.red, 70) : color.new(color.gray, 90), text_size=size.small)

    // Divergence (if enabled)
    if enableDivergenceDetection
        table.cell(confluenceTable, 0, 7, "Divergence", text_size=size.small)
        table.cell(confluenceTable, 1, 7, strongBullishDivergence ? "‚úì" : "‚àí",
                   bgcolor=strongBullishDivergence ? color.new(color.green, 70) : color.new(color.gray, 90), text_size=size.small)
        table.cell(confluenceTable, 2, 7, strongBearishDivergence ? "‚úì" : "‚àí",
                   bgcolor=strongBearishDivergence ? color.new(color.red, 70) : color.new(color.gray, 90), text_size=size.small)

    // Separator
    table.cell(confluenceTable, 0, 8, "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ", text_color=color.gray, text_size=size.small)
    table.cell(confluenceTable, 1, 8, "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ", text_color=color.gray, text_size=size.small)
    table.cell(confluenceTable, 2, 8, "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ", text_color=color.gray, text_size=size.small)

    // Total Score / –û–±—â–∏–π –±–∞–ª–ª
    table.cell(confluenceTable, 0, 9, "TOTAL SCORE", bgcolor=color.new(color.blue, 80), text_color=color.white, text_size=size.small)
    table.cell(confluenceTable, 1, 9, str.tostring(bullishScore),
               bgcolor=bullishScore >= minConfluenceScore ? color.new(color.green, 50) : color.new(color.gray, 80),
               text_color=color.white, text_size=size.normal)
    table.cell(confluenceTable, 2, 9, str.tostring(bearishScore),
               bgcolor=bearishScore >= minConfluenceScore ? color.new(color.red, 50) : color.new(color.gray, 80),
               text_color=color.white, text_size=size.normal)

