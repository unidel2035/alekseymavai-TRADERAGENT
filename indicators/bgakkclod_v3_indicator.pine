// Function to calculate logarithmic Fibonacci price
// –§—É–Ω–∫—Ü–∏—è –¥–ª—è –≤—ã—á–∏—Å–ª–µ–Ω–∏—è –ª–æ–≥–∞—Ä–∏—Ñ–º–∏—á–µ—Å–∫–æ–π —Ü–µ–Ω—ã –§–∏–±–æ–Ω–∞—á—á–∏
calcLogFibPrice(float lowPrice, float highPrice, float level, bool isBullish) =>
    float result = na
    if not na(lowPrice) and not na(highPrice) and lowPrice > 0 and highPrice > 0
        logLow = math.log(lowPrice)
        logHigh = math.log(highPrice)
        logRange = logHigh - logLow

        // Declare logPrice variable before using it
        float logPrice = na

        // For bullish: standard Fib from low to high
        // For bearish: inverted Fib from high to low (FIX for v3)
        if isBullish
            logPrice := logLow + (logRange * level)
        else
            // –ò–°–ü–†–ê–í–õ–ï–ù–ò–ï: –¥–ª—è –º–µ–¥–≤–µ–∂—å–∏—Ö —Å–∏–≥–Ω–∞–ª–æ–≤ —Å—Ç—Ä–æ–∏–º –æ—Ç high –∫ low
            logPrice := logHigh - (logRange * level)

        result := math.exp(logPrice)
    result

// Function to draw Fibonacci levels with logarithmic scale
// –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç—Ä–∏—Å–æ–≤–∫–∏ —É—Ä–æ–≤–Ω–µ–π –§–∏–±–æ–Ω–∞—á—á–∏ —Å –ª–æ–≥–∞—Ä–∏—Ñ–º–∏—á–µ—Å–∫–æ–π —à–∫–∞–ª–æ–π
// –£—Ä–æ–≤–Ω–∏ –ø–æ —Ç—Ä–µ–±–æ–≤–∞–Ω–∏—é issue #59:
// -2.618  TP3 (–∑–∞–∫—Ä—ã—Ç—å 40% –ø–æ–∑–∏—Ü–∏–∏)
// -1.618  TP2 (–∑–∞–∫—Ä—ã—Ç—å 30% –ø–æ–∑–∏—Ü–∏–∏)
// -0.618  TP1 (–∑–∞–∫—Ä—ã—Ç—å 30% –ø–æ–∑–∏—Ü–∏–∏)
//  0.000  High —Å–≤–µ—á–∏ (–í—Ö–æ–¥ #1 –≤ –º–æ–º–µ–Ω—Ç –∑–∞–∫—Ä—ã—Ç–∏—è —Å–≤–µ—á–∏, 1% –¥–µ–ø–æ–∑–∏—Ç–∞)
//  0.500  –í—Ö–æ–¥ #2 (–ª–∏–º–∏—Ç–∫–∞, 1% –¥–µ–ø–æ–∑–∏—Ç–∞)
//  0.618  –í—Ö–æ–¥ #3 (–ª–∏–º–∏—Ç–∫–∞, 1% –¥–µ–ø–æ–∑–∏—Ç–∞)
//  0.820  STOP-LOSS (–≤—Å–µ–≥–¥–∞ 0.82)
//  1.000  Low —Å–≤–µ—á–∏ (–æ—Å–Ω–æ–≤–∞–Ω–∏–µ)
drawFibonacci(float candleLow, float candleHigh, int sigBar, bool isBullish) =>
    if not na(candleLow) and not na(candleHigh) and candleLow > 0 and candleHigh > 0 and candleHigh > candleLow

        // Define Fibonacci levels according to issue #59
        // Negative levels for take-profit, positive for entries and stop-loss
        levels = array.from(-2.618, -1.618, -0.618, 0.0, 0.5, 0.618, 0.82, 1.0)
        levelNames = array.from(
             "TP3 (40%)",
             "TP2 (30%)",
             "TP1 (30%)",
             "Entry #1",
             "Entry #2",
             "Entry #3",
             "STOP-LOSS",
             "Base"
         )

        // Color scheme for levels / –¶–≤–µ—Ç–æ–≤–∞—è —Å—Ö–µ–º–∞ –¥–ª—è —É—Ä–æ–≤–Ω–µ–π
        // –ò—Å–ø–æ–ª—å–∑—É–µ–º 60% –ø—Ä–æ–∑—Ä–∞—á–Ω–æ—Å—Ç—å (transparency = 60)
        levelColors = array.from(
             color.new(#00FF00, 60),     // TP3 - bright green
             color.new(#00CC00, 60),     // TP2 - green
             color.new(#00AA00, 60),     // TP1 - dark green
             color.new(#FF6600, 60),     // Entry #1 - orange
             color.new(#FFAA00, 60),     // Entry #2 - light orange
             color.new(#FFD700, 60),     // Entry #3 - gold
             color.new(#FF0000, 60),     // STOP-LOSS - red
             color.new(#0066FF, 60)      // Base - blue
         )

        // Draw each level / –û—Ç—Ä–∏—Å–æ–≤–∫–∞ –∫–∞–∂–¥–æ–≥–æ —É—Ä–æ–≤–Ω—è
        // –õ–∏–Ω–∏–∏ —Ç–æ–ª—â–∏–Ω–æ–π 1 –ø–∏–∫—Å–µ–ª—å
        for i = 0 to array.size(levels) - 1
            levelRatio = array.get(levels, i)
            levelPrice = calcLogFibPrice(candleLow, candleHigh, levelRatio, isBullish)

            if not na(levelPrice) and levelPrice > 0
                levelName = array.get(levelNames, i)
                lineColor = array.get(levelColors, i)

                // Create horizontal line extending to the right
                // –°–æ–∑–¥–∞–Ω–∏–µ –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª—å–Ω–æ–π –ª–∏–Ω–∏–∏ —Å –ø—Ä–æ–¥–ª–µ–Ω–∏–µ–º –≤–ø—Ä–∞–≤–æ
                // –¢–æ–ª—â–∏–Ω–∞ –ª–∏–Ω–∏–∏ 1 –ø–∏–∫—Å–µ–ª—å
                newLine = line.new(
                     x1=sigBar,
                     y1=levelPrice,
                     x2=sigBar + lineExtension,
                     y2=levelPrice,
                     color=lineColor,
                     width=1,  // 1 –ø–∏–∫—Å–µ–ª—å —Ç–æ–ª—â–∏–Ω–∞
                     style=line.style_solid
                 )

                array.push(activeFibLines, newLine)

                // Add label for the level
                // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –º–µ—Ç–∫–∏ –¥–ª—è —É—Ä–æ–≤–Ω—è
                newLabel = label.new(
                     x=sigBar + lineExtension,
                     y=levelPrice,
                     text=levelName,
                     color=color.new(lineColor, 80),
                     textcolor=color.white,
                     style=label.style_label_left,
                     size=size.small
                 )

                array.push(activeFibLabels, newLabel)

