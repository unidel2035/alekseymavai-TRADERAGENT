# Bybit API Configuration
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# Use testnet for testing (true/false)
USE_TESTNET=true

# Use perpetual contracts (adds 'T' to USD pairs)
USE_PERP=true

# Server Configuration
PORT=3000
NODE_ENV=development

# Webhook Security Token (optional but recommended)
# Set this token in TradingView webhook URL as header: X-Webhook-Token
WEBHOOK_TOKEN=your_secret_webhook_token_here

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info